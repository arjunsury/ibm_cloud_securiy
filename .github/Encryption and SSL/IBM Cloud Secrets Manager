import com.ibm.cloud.sdk.core.security.IamAuthenticator;
import com.ibm.secretsmanager.v2.SecretsManager;
import com.ibm.secretsmanager.v2.model.GetSecret;

IamAuthenticator authenticator = new IamAuthenticator("your-iam-api-key");
SecretsManager secretsManager = new SecretsManager(authenticator);

GetSecret secret = secretsManager.getSecret("your-secret-id").execute().getResult();
String apiKey = secret.getSecretData().get("API_KEY");
